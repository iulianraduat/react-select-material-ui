{
  "compilerOptions": {
    "rootDirs": ["src", "stories"],
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": false,
    "jsx": "react",
    "typeRoots": ["index.d.ts", "node_modules/@types"],
    "lib": ["es5", "es6", "dom"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/*.test.tsx"]
}
